{
  "name": "vc-verifier",
  "version": "3.2.4",
  "description": "The EECC verifier for verifiable credentials which provides an verification API as well as the corresponding UI.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "tsc-watch --onSuccess 'nodemon ./dist/index.js'",
    "copy-schemas": "copyfiles -u 1 \"src/services/verifier/schemas/*.json\" dist",
    "build-tsc": "npx tsc && npm run copy-schemas",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --verbose --coverage --detectOpenHandles --forceExit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/european-epc-competence-center/vc-verifier.git"
  },
  "keywords": [
    "verifiable",
    "credential",
    "SSI",
    "json-ld"
  ],
  "author": "Chrisitan Fries (EECC)",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/european-epc-competence-center/vc-verifier/issues"
  },
  "homepage": "https://github.com/european-epc-competence-center/vc-verifier#readme",
  "dependencies": {
    "@digitalbazaar/bitstring": "^3.1.0",
    "@digitalbazaar/data-integrity": "^2.5.0",
    "@digitalbazaar/did-method-key": "^5.3.0",
    "@digitalbazaar/ecdsa-rdfc-2019-cryptosuite": "^1.2.0",
    "@digitalbazaar/ecdsa-sd-2023-cryptosuite": "^3.4.1",
    "@digitalbazaar/ed25519-signature-2018": "^4.0.0",
    "@digitalbazaar/ed25519-signature-2020": "^5.2.0",
    "@digitalbazaar/eddsa-rdfc-2022-cryptosuite": "^1.2.0",
    "@digitalbazaar/vc": "^7.2.0",
    "@digitalbazaar/vc-revocation-list": "^7.0.0",
    "@digitalbazaar/vc-status-list": "^8.0.1",
    "@eecc/es256-signature-2020": "^1.2.0",
    "@eecc/rsa-rdfc-2025-cryptosuite": "^1.0.1",
    "@eecc/vc-verifier-rules": "^2.6.0",
    "@noble/curves": "^2.0.0",
    "cors": "^2.8.5",
    "did-resolver": "^4.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-jsdoc-swagger": "^1.8.0",
    "http-status-codes": "^2.2.0",
    "jose": "^6.1.0",
    "jsonld": "github:european-epc-competence-center/jsonld.js#cachefix",
    "jsonld-signatures": "^11.2.1",
    "multibase": "^4.0.6",
    "multiformats": "^13.4.1",
    "node-fetch": "^3.3.2",
    "parse-link-header": "^2.0.0",
    "web-did-resolver": "^2.0.27"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@types/parse-link-header": "^2.0.0",
    "@types/supertest": "^6.0.3",
    "copyfiles": "^2.4.1",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.1",
    "tsc-watch": "^7.2.0",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "jsonld": "$jsonld"
  }
}
